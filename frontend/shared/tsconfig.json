{
	"compilerOptions": {
		"baseUrl": "..",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "../dist/shared",
		"rootDir": ".",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022",
		"types": ["node"]
	},
	"exclude": ["node_modules"],
	"include": ["./**/*.ts"]
}
